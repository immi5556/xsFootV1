@model app.bsms.Models.Manage.Customer.Register

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    label{
        margin-top:.5rem;
    }
</style>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/Index">@Resources.Resources.Home</a></li>
        <li class="breadcrumb-item"><a href="~/Customer/Search">@Resources.Resources.Customers</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.customerName</li>
    </ol>
</nav>
<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-header">
                <img src="~/images/no-image.png" class="rounded mx-auto d-block" />
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <a class="dropdown-item dropdown-item-lg" href="~/Redemption/Index/@Model.customerCode">@Resources.Resources.Services</a>
                </li>
                <li class="list-group-item">
                    <a class="dropdown-item dropdown-item-lg" href="~/Products/Index/@Model.customerCode">@Resources.Resources.Products</a>
                </li>
                <li class="list-group-item">
                    <a class="dropdown-item dropdown-item-lg" href="~/Accounts/Index/@Model.customerCode">@Resources.Resources.Accounts</a>
                </li>
                @*<li class="list-group-item">
        <a class="dropdown-item dropdown-item-lg" href="#">@Resources.Resources.Appointments</a>
    </li>
    <li class="list-group-item">
        <a class="dropdown-item dropdown-item-lg" href="~/Customer/MGM/@Model.customerCode">@Resources.Resources.MGM</a>
    </li>*@
