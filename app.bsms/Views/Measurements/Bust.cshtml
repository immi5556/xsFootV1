<div class="card">
    <div class="card-header">
        <strong>Summary	</strong>
    </div>
    <div class="col-lg-12">
        <div class="card-body card-block">
            <form action="" method="post" class="form-horizontal">
                <div class="row form-group">
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Date</label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="DD/MM" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Cup Size</label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Arrow1 </label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Arrow2 </label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Upper Bust</label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control" >
                    </div>
                                                    
                </div>
                                               
                <div class="row form-group">
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Attend</label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Comments</label>
                    </div>
                    <div class="col-lg-1">
                        <input type="email" id="hf-email" name="hf-email" placeholder="0.00" class="form-control">
                    </div>
                    <div class="col-lg-1">
                        <label for="hf-email" class=" form-control-label">Text Area</label>
                    </div>
                    <div class="col-lg-1">
                        <textarea rows="4" cols="50" name="comment" form="usrform" style="border-color:#B0A478">
                        </textarea>
                    </div>

                </div>
                                               
            </form>
        </div>
    </div>
</div>

