@model List<app.bsms.Models.Administration.Department>

@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Dashboard/Index">@Resources.Resources.Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Resources.Resources.Department</li>
    </ol>
</nav>

<div class="clearfix">&nbsp;</div>
<a class="btn btn-primary btn-lg pull-right" href="~/Department/Create">
    @Resources.Resources.AddNewDepartment
</a>
<div class="clearfix">&nbsp;</div>

@Html.Raw(@TempData["Message"])

@if (Model != null)
{
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><b>@Resources.Resources.Department</b></li>
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.departmentName
                <div class="badge">
                    <a class="btn btn-primary btn-lg pull-right" href="~/Department/Edit/@item.departmentId">
                        @Resources.Resources.Edit
                    </a>
                </div>
            </li>
        }
    </ul>
}