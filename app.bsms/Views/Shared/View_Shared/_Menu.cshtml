<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    @*<title>@ViewBag.Title</title>*@
    @RenderSection("meta", required: false)

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="description" content="admin-themes-lab" />
    <meta name="author" content="themes-lab" />
    <link rel="shortcut icon" href="images/test.png" type="image/png" />
    <link href="~/assets/global/css/style.css" rel="stylesheet" />
    <link href="~/assets/global/css/theme.css" rel="stylesheet" />
    <link href="~/assets/global/css/ui_v1.0.css" rel="stylesheet" />

    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/step-form-wizard/css/step-form-wizard.min.css" rel="stylesheet" />
    <link href="~/assets/global/plugins/modernizr/modernizr-2.6.2-respond-1.1.0.min.js" rel="stylesheet" />
    <!--JQGRID TABLE CSS -->
    <link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
    <link href="~/Content/gridmaster.css" rel="stylesheet" />
    <link href="~/Content/blue-jquery-ui/jquery-ui.css" rel="stylesheet" />

    <!-- FONT AWESOME-->
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-animation.min.css" rel="stylesheet" />

    <!-- JTABLE TABLE CSS -->
    <link href="~/Scripts/jtable/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" type="text/css" />

    <!-- PAGE STYLE -->
    <link href="~/assets/global/plugins/metrojs/metrojs.min.css" rel="stylesheet">
    <link href="~/assets/global/plugins/maps-amcharts/ammap/ammap.min.css" rel="stylesheet">

    <!-- CSS STYLE -->
    <link href="~/Scripts/css/validationengine.jquery.css" rel="stylesheet">
    @Scripts.Render("~/bundles/jquery")

    <script type="text/javascript">
        $(document).ready(function () {
            $("#accordian h3").click(function () {
                $("#accordian ul ul").slideUp();
                if (!$(this).next().is(":visible")) {
                    $(this).next().slideDown();
                }
            });
        });
    </script>
    @*<script src="~/ViewsScript/Account/Logout.js"></script>*@

    @RenderSection("styles", required: false)

    <style>
        .theme-sdtl.color-default .sidebar .sidebar-inner {
            background: #ffd11a;
        }

        sidebar-footer .theme-sdtl.color-default .sidebar .sidebar-inner {
            background: #ffd11a;
        }

        .sidebar {
            background-color: #ffd11a;
        }

        .theme-sdtl.color-default .sidebar .sidebar-inner .nav-sidebar .nav-parent .children, .theme-sdtl.color-default .sidebar .sidebar-inner .sidebar-footer, .theme-sdtl.color-default .sidebar .sidebar-inner .sidebar-top .searchform input {
            background: #ffd11a;
        }
    </style>
</head>
<body id="theme" class="">
    <section>
        <!-- BEGIN SIDEBAR -->
        <div class="sidebar">
            <div class="logopanel" style="background-color:white;text-align:center">
                <img src="~/img/companylogo.png" style="max-width:100%;max-height:100%" />
            </div>
            <div class="sidebar-inner">
                <div class="sidebar-top big-img">
                    <div class="user-image">
                        <img src="~/img/UploadPhoto.jpg" style="width:180px; height:100px" class="img-responsive img-circle" alt="gallery 3">
                    </div>
                    <h7>VSTECHNOSCIENCE</h7><br />
                </div>
                <br />
                <div id="accordian">
                    @* @Html.ActionLink("Dashboard","HeaderMenu", "Dashboard")*@
                    <ul class="nav nav-sidebar">
                        <li class="nav-active active"><a href="~/Dashboard"><i class="icon-home"></i><span>Dashboard Index</span></a></li>
                        <li class="nav-parent active">
                            <a href="#"><i class="fa fa-certificate"></i><span> Catalogue </span><span class="fa arrow"></span></a>

                            <ul class="children collapse active">
                                <li>
                                    <a href='/Service'>Catalogue Category</a>
                                </li>
                                <li>
                                    <a href='/AddTocart/cart'>Add To Cart Status</a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </div>
                <ul class="nav nav-sidebar"></ul>
                <!-- SIDEBAR WIDGET FOLDERS -->
                <div class="sidebar-widgets" style="visibility:hidden">
                    <p style="visibility:hidden" class="menu-title widget-title">Folders <span class="pull-right"><a href="#" class="new-folder"> <i class="icon-plus"></i></a></span></p>
                    <ul class="folders">
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-doc c-primary"></i>My documents</a>
                        </li>
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-picture"></i>My images</a>
                        </li>
                        <li>
                            <a style="visibility:hidden" href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                        <li>
                            <a href="#"><i class="icon-lock"></i>Secure data</a>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-footer clearfix" style="border-top: solid 1px #f5f5f5;">
                    <a style="visibility:hidden;" class="pull-left footer-settings" href="#" data-rel="tooltip" data-placement="top" data-original-title="Settings">
                        <i class="icon-settings"></i>
                    </a>
                    <a class="pull-left toggle_fullscreen" href="#" data-rel="tooltip" data-placement="top" data-original-title="Fullscreen">
                        <i class="icon-size-fullscreen"></i>
                    </a>


                    <a style="visibility:hidden;" class="pull-left" href="/Home/LogOut" data-rel="tooltip" data-placement="top" data-original-title="Lockscreen">
                        <i class="icon-lock"></i>
                    </a>
                    <a class="pull-left btn-effect" href="/Home/LogOut" data-modal="modal-1" data-rel="tooltip" data-placement="top" data-original-title="Logout">
                        <i class="icon-power"></i>
                    </a>


                </div>
            </div>
        </div>
        <!-- END SIDEBAR --><div></div>
        <div class="main-content">
            <!-- BEGIN TOPBAR -->
            <div class="topbar">
                <div class="header-left" style="display: block;">
                    <div class="topnav">
                        <a class="menutoggle" href="#" data-toggle="sidebar-collapsed"><span class="menu__handle"><span>Menu</span></span></a>
                    </div>
                </div>
                <div class="header-right">
                    <ul class="header-menu nav navbar-nav">
                        <!-- CHAT BAR ICON -->
                        <li id="quickview-toggle"><a href="~/Addtocart/cart"> <i style="font-size:24px;border: 1px solid #B0A478;background-color: #E3D595;color:black" class="fa">&#xf07a;</i></a></li>

                        <!-- BEGIN USER DROPDOWN -->
                        <li class="dropdown" id="user-header">
                            <a href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                <span class="username">Hi, VSTECHNOSCIENCE </span>
                            </a>
                            <ul class="dropdown-menu" style="background-color: #E3D595;">

                                <li>
                                    <a href="../UpdateInfo/ChangePassword"><i class="icon-calendar"></i><span>Change Password</span></a>

                                </li>
                                <li>
                                    <a href="../Home/LogOut"><i class="icon-logout"></i><span>Logout</span></a>
                                </li>
                            </ul>
                        </li>
                        <!-- END USER DROPDOWN -->

                    </ul>
                </div>
                <!-- header-right -->
            </div>

            <!-- END
            TOPBAR -->
            <!-- BEGIN PAGE CONTENT -->
            @RenderBody()
            <!-- END PAGE CONTENT -->
            <div class="footer">
                <div class="copyright">
                    <p class="pull-left sm-pull-reset"> <span>Copyrights <span class="copyright">©</span> 2018 </span> <span>Sequoia Asia - BeauteSoft CRM</span> </p>

                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </section>
    <!-- BEGIN PRELOADER -->
    <div class="loader-overlay">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div>
    <!-- END PRELOADER -->

    <script>
        $(function () {

            $(window).on('load', function () {

                $('.menutoggle').click()
            })
        })
    </script>
</body>
</html>
